<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Perfil</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", admin_root_path, class: 'text-secondary' %></li>
                    <li class="breadcrumb-item active"><%= current_admin.email.truncate(10)%></li>
                </ol>
            </div>

        </div>
    </div>
</div> 
<div class="row justify-content-md-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <%= form_with(url: admin_admin_profile_path, model: @profile, local: true, method: :patch, html: { novalidate: true ,class: 'needs-validation' }) do |form|%>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="validationEmail">Email</label>                                
                                <%= form.text_field :email, class: 'form-control', id: 'validationEmail', placeholder: 'Email de Autenticação', required: true%>
                                <div class="valid-feedback">
                                    Ok!
                                </div>
                                <div class="invalid-feedback">
                                    Insira seu email.
                                </div>
                            </div>
                        </div>                        
                    </div>
                    <div class="row">
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="validationPass">Senha</label>
                                <%= form.password_field :password, class: 'form-control', id: 'validationPass', placeholder: 'Sua senha'%>
                                <div class="valid-feedback">
                                    Ok!
                                </div>
                                <div class="invalid-feedback">
                                    Insira uma senha.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="validationPassConf">Confirmação de Senha</label>
                                <%= form.password_field :password_confirmation, class: 'form-control', id: 'validationPassConf', placeholder: 'Confirme sua Senha'%>
                                <div class="valid-feedback">
                                    Ok!
                                </div>
                                <div class="invalid-feedback">
                                    Insira uma senha
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">           
                                <label for="validationImage" >Imagem</label> 
                                <button id="AnexImagem" type="button" class="btn btn-zygo form-control">Anexar Imagem</button> 
                                <div class="center">                                
                                    <label id="nameImage"></label>
                                </div>                                
                                <div class="center">
                                    <%=image_tag(has_avatar_profile(), id: 'preview-img')%>
                                </div>                                
                                <%= form.file_field :avatar, class: 'form-control', id: 'validationImage', style: 'display: none;'%>
                            </div>
                        </div>
                    </div>
                    <%= form.submit "SALVAR", class: 'btn btn-secondary float-right'%>
                <%end%>
            </div>
        </div>                                
    </div> 
</div>