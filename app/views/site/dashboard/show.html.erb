<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumb">
                    <li><a href="/">Voltar</a></li>                    
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="single-product bg--white pt--80 pb--80 pt-sm--60 pb-sm--60">
    <div class="row">
        <div class="col-lg-6">                
            <div class="product-thumbnail">
                <div class="thumb-menu product-thumb-menu" id="thumbmenu-horizontal">
                    <div class="thumb-menu-item">                            
                        <%= image_tag(has_book_face(@book.id))%>                            
                    </div>                        
                </div>
            </div>               
        </div>
        <div class="col-lg-6">               
            <div class="single-product__content"> 
                <div class="single-product__top">
                    <h2 class="single-product__name"><%= @book.title %></h2>
                </div>  

                <div class="single-product__middle">
                    <p class="single-product__short-desc"><h4><%= sanitize @book.description %></h4></p>                        
                </div> 

                <div class="single-product__meta">
                    <p>
                        <strong>Autor:</strong> 
                        <a href="#"><%= @book.author%></a>
                    </p>                       
                </div>  
            </div>                
        </div>
    </div>
</section>
